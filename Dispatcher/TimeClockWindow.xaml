<Window x:Class="WpfDemoApp.Dispatcher.TimeClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Dispatcher"
        mc:Ignorable="d"
        Title="TimeClockWindow" Height="350" Width="400">
    <Grid>
        <Border Height="35" Width="200" BorderBrush="Black" BorderThickness="3" CornerRadius="4">
            <TextBlock x:Name="ClockTextBlock" Text="Clock" Margin="3,5,0,0"></TextBlock>
        </Border>
    </Grid>
</Window>
